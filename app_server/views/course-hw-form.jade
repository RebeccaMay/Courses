extends layout

block content
	.row.page-header
		.col-lg-12
			h1 Add an Assignment
	.row
		.col-xs-12.col-md-6
			form.form-horizontal(action="/course", method="get", role="form")
				.form-group
					label.col-xs-10.col-sm-2.control-label(for="name") Name
					.col-xs-12.col-sm-10
						input#name.form-control(name="name")
				.form-group
					label.col-xs-10.col-sm-2.control-label(for="due") Due
					.col-xs-12.col-sm-10
						input#name.form-control(name="due")
				.form-group
					label.col-xs-10.col-sm-2.control-label(for="points") Points
					.col-xs-12.col-sm-10
						input#points.form-control(name="points")							
				.form-group
					label.col-xs-10.col-sm-5.control-label(for="status") Status
					.col-xs-12.col-sm-2
						select#rating.form-control.input-sm(name="status")
							Option Haven't started
							Option In Progress
							Option Completed
							Option Graded
				button.btn.btn-default.pull-right Add assignment
			.col-xs-12.col-md-4